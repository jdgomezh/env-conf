# EditorConfig is awesome: <https://EditorConfig.org>
root = true

[*]
charset = utf-8
tab_width = 4
end_of_line = lf
indent_size = tab
indent_style = tab
max_line_length = 0
max_line_length = off
insert_final_newline = true
trim_trailing_whitespace = true

[*.yaml, *.yml]
charset = utf-8-bom
tab_width = 2
indent_size = 2
end_of_line = lf
indent_style = space
